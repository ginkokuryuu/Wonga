<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/balance_recycler_main"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/balance_item_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="Monthly Expenses"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/food_main_button"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_main"
                        android:text="@string/food"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/button_side_main"
                        android:layout_gravity="left|top"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/transport_main_button"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_main"
                        android:text="@string/food"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/button_side_main"
                        android:layout_gravity="left|top"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/medical_main_button"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_main"
                        android:text="@string/food" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/button_side_main"
                        android:layout_gravity="left|top"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/misc_main_button"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_main"
                        android:text="@string/food" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/button_side_main"
                        android:layout_gravity="left|top"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>