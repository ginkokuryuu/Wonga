<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FoodActivity"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expenses_recycle_list"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        tools:listitem="@layout/expenses_item_list" />

    <LinearLayout
        android:id="@+id/bottom_sheet_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable = "true"
        app:behavior_peekHeight="70dp"
        android:background="@drawable/add_expenses_shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Expenses"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/add_expenses"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Amount"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:inputType="number"/>
        
        <Button
            android:id="@+id/save_expenses"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/add_expenses_button"
            android:text="ADD"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>